{
  "name": "ablesync",
  "version": "1.0.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "rm -rf dist && tsc && electron-builder --arm64 --publish never",
    "build:x64": "rm -rf dist && tsc && electron-builder --x64",
    "clean": "rm -rf dist release node_modules",
    "rebuild": "npm run clean && npm install && npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.joohnnyvv.ablesync",
    "productName": "AbleSync",
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg",
      "icon": "build/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "index.html",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/slave/src",
        "to": "app/slave"
      },
      {
        "from": "dist/master/src",
        "to": "app/master"
      },
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "node_modules",
        "to": "app/node_modules"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/app/**/*.js",
      "**/app/**/*.json",
      "**/node_modules/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Server for connecting two Ableton Live instances",
  "dependencies": {
    "ableton-js": "^3.7.0",
    "dotenv": "^16.6.0",
    "electron-updater": "^6.6.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/ws": "^8.18.1",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
